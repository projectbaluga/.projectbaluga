<Window x:Class="projectbaluga.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BOJEX" Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#FAFAFA">
    <Grid>
        <!-- Main content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Password Label -->
            <TextBlock Text="Enter Password" FontWeight="Bold" FontSize="16" Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Password Box -->
            <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                         Margin="0,0,0,15" Padding="15,10" FontSize="16" BorderBrush="#DDD" 
                         BorderThickness="1" Background="#F4F4F4" MaxLength="20"/>

            <!-- OK Button -->
            <Button Content="OK" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                    Padding="15,10" FontSize="16" FontWeight="Bold" Background="red"
                    Foreground="White" BorderBrush="red" BorderThickness="1"
                    Height="50" Click="OkButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6200EE"/>
                        <Setter Property="BorderBrush" Value="#6200EE"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3700B3"/>
                                <Setter Property="BorderBrush" Value="#3700B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#03DAC5"/>
                                <Setter Property="BorderBrush" Value="#03DAC5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <!-- Custom Button Template with CornerRadius -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Footer -->
            <TextBlock Text="Powered by ProjectBaluga" HorizontalAlignment="Center" Foreground="#888" FontSize="12" Margin="10,20,10,0"/>
        </StackPanel>
    </Grid>
</Window>
