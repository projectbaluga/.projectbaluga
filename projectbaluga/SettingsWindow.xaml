<Window x:Class="projectbaluga.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#FAFAFA">

    <Grid>
        <!-- Main Content Area -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="376" Margin="0,65,0,0" Height="535">
            <!-- Header Text -->
            <TextBlock FontWeight="Bold" FontSize="16" Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,15">
                Settings
            </TextBlock>

            <!-- Hotspot URL Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                <Label Content="Hotspot URL:" VerticalAlignment="Center" Width="120" Foreground="#333333" FontSize="14"/>
                <TextBox Name="HotspotUrlBox" Width="235" Margin="0,0,0,10" Padding="10" FontSize="14" 
                         BorderBrush="#DDD" BorderThickness="1" Background="#F4F4F4"/>
            </StackPanel>

            <!-- Post Login URL Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                <Label Content="Post Login URL:" VerticalAlignment="Center" Width="120" Foreground="#333333" FontSize="14"/>
                <TextBox Name="PostLoginUrlBox" Width="235" Margin="0,0,0,10" Padding="10" FontSize="14" 
                         BorderBrush="#DDD" BorderThickness="1" Background="#F4F4F4"/>
            </StackPanel>

            <!-- Lock Screen URL Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                <Label Content="Lock Screen URL:" VerticalAlignment="Center" Width="120" Foreground="#333333" FontSize="14"/>
                <TextBox Name="LockScreenUrlBox" Width="235" Margin="0,0,0,10" Padding="10" FontSize="14" 
                         BorderBrush="#DDD" BorderThickness="1" Background="#F4F4F4"/>
            </StackPanel>

            <!-- Admin Password Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                <Label Content="Admin Password:" VerticalAlignment="Center" Width="120" Foreground="#333333" FontSize="14"/>
                <PasswordBox Name="PasswordBox" Width="235" Margin="0,0,0,10" Padding="10" FontSize="14" 
                             BorderBrush="#DDD" BorderThickness="1" Background="#F4F4F4"/>
            </StackPanel>

            <!-- Topmost Checkbox Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                <CheckBox Name="TopmostCheckBox" VerticalAlignment="Center" Foreground="#333333" Content="Always on Top" FontSize="14"/>
            </StackPanel>

            <!-- Save Button -->
            <Button Content="Save" HorizontalAlignment="Stretch"
                    Padding="15,10" FontSize="16" FontWeight="Bold" Click="SaveButton_Click"
                    Height="50" Margin="0,20,0,10" Background="#FFEE0037" BorderBrush="Red">
                <!-- Reuse the existing style from first code -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6200EE"/>
                        <Setter Property="BorderBrush" Value="#6200EE"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3700B3"/>
                                <Setter Property="BorderBrush" Value="#3700B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#03DAC5"/>
                                <Setter Property="BorderBrush" Value="#03DAC5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Footer Text -->
        </StackPanel>
    </Grid>
</Window>
